'use strict';

(function(){

  angular.module('TravelBlog', [
    'ngRoute',
    'mm.foundation',
    'TravelBlog.filters',
    'TravelBlog.services',
    'TravelBlog.directives',
    'TravelBlog.controllers'
  ])

  .config(function ($routeProvider, $locationProvider) {
        $routeProvider
            .when('/', {
                templateUrl: '<%= asset_path("layout.html") %>',
                controller: 'IndexCtrl'
            });
        $locationProvider.html5Mode(true);
    });

})();